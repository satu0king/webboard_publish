<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Webboard</title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-128984123-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-128984123-1');
    </script>
  </head>

  <body>
    <%= render 'layouts/header' %>
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
    <%= yield %>
      <hr class="hrcss">
      <div class="container">
        <p>&copy; Webboard Team 2020</p>
      </div>
  </body>
</html>
